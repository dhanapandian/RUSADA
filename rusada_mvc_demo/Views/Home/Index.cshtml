@model IEnumerable<Rusada_Mvc_Demo.Models.AirCraft>

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
<p>@Html.ActionLink("Create New","Create")
 </p>
<h4 class="alert-success">@TempData["msg"]</h4>

<h2>Aircraft List & Search</h2>
<p>
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        <b>Search by :</b>@Html.RadioButton("SearchBy", "Make", true)<text>Make</text>
        @Html.RadioButton("SearchBy", "Model")<text>Model</text>
        @Html.RadioButton("SearchBy", "Registration")<text>Registration</text><br />
        @Html.TextBox("Search") <input type="submit" value="Search" />


    }

</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.registration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date) 
        </th>

        <th>
            IMAGE
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {

        <tr>
            <td colspan="4">
                <p style="color:red">No rows found !!</p>
            </td>

        </tr>

    }
    else
    {


    }


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.registration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>

            <td>
                <img src="@Url.Content(item.image_path)" height="100" width="100" />
            </td>
            <td>

                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { Style = "color:green" }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }, new { Style = "color:sky blue?" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { Style = "color:red" })|

            </td>

        </tr>
    }


    </table>